
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<hr/>
<form method="post" action="/auth/login">
    <table>

        <tr>
            <td>Email</td>
            <td><input type="email" name="email" id="email" /></td>

        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password" id="password" /></td>

        </tr>
        <tr>
            <td><button type="submit">Login</button></td>
        </tr>

        <tr>
            <td><a href="/auth/register"> New User? Register here !! </a> | <a href="/auth/resetpassword">Reset Password</a></td>
        </tr>
    </table>

</form>


